import microbit
import random

def shoot(target_x, target_y) :
    """Shoot on the selected pixel"""
    
    for n in range(1, nb_submarines + 1) :
        x = submarines[n]["x"]
        y = submarines[n]["y"]
        pv = submarines[n]["life"]
        
        if target_x == x and target_y == y :
          microbit.display.set_pixel(x, y, 9)
          microbit.sleep(2500)
          microbit.display.clear
          submarines[n]["life"] = pv - 1
